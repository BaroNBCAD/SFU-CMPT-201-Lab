#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>

int main(void) {
  printf("Please enter some text: ");
  char *buff = NULL;
  size_t size = 0;
  ssize_t num_read = getline(&buff, &size, stdin); 
  if (num_read != -1) {
    printf("%c", buff[num_read]);
    printf("\n");
    printf("%c", buff[num_read-1]);
    printf("%c", buff[num_read-2]);
  } else {
    perror("getline failed");
    exit(EXIT_FAILURE);
  }
  return 0;
}
