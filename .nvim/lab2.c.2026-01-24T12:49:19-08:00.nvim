#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>

int main(void) {
    printf("Please enter some text: ");
    char *buff = NULL;
    size_t size = 0;
    if (getline(&buff, &size, stdin) != -1){
      printf("Hello\n");
    }
    else {
        perror("getline failed");
        exit(EXIT_FAILURE);
    }
    return 0;
}
